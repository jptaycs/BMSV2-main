{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "shell:allow-open",
    "shell:default",
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-document-write-recursive",
      "allow": [{"path": "$APPDATA/*"} ]
    }
  ]
}
