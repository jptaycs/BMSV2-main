{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BMS",
  "version": "0.1.0",
  "identifier": "com.bms.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://192.168.1.5:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Barangay Management System",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
